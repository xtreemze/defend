{
	"env": {
		"browser": true,
		"es6": true,
		"commonjs": true
	},
	"extends": "eslint:recommended",
	"plugins": [
		"tslint"
	],
	"parser": "typescript-eslint-parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		]
	}
}